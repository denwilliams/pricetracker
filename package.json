{
  "name": "pricetracker",
  "version": "1.0.0",
  "description": "A little bit like 3camels but for any online store.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "tsc && cd client && npm run build",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seeds.ts",
    "docker:build": "docker build -t pricetracker .",
    "docker:run": "docker run -p 3001:3001 --env-file .env pricetracker",
    "deploy": "./scripts/deploy.sh",
    "deploy:prod": "./scripts/deploy.sh production",
    "backup": "./scripts/backup.sh",
    "restore": "./scripts/restore.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "price",
    "tracker",
    "scraping",
    "notifications"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-validator": "^0.7.2",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.0",
    "node-cron": "^4.2.1",
    "postgres": "^3.4.7",
    "puppeteer": "^24.16.0",
    "pushover-notifications": "^1.2.3",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1"
  }
}
